{
	auto_https off
	http_port 7000
}

anubis.corgi.wiki {
	reverse_proxy localhost:8081
}

:7000 {
		log
    @valid_referer {
        header Referer https://anubis.corgi.wiki/
    }

    reverse_proxy @valid_referer localhost:8001 {
        header_up Host {host}
        header_up X-Real-IP {remote_host}
        header_up X-Forwarded-For {remote_host}
    }

  handle {
  	respond "Invalid Referer or no route found" 403
  }
}
